opam-version: "1.2"
maintainer: "alavrik@piqi.org"
build: [
  ["./configure" "--prefix" prefix]
  [make]
  [make "ocaml"]
]
install: [
  [make "install"]
  [make "ocaml-install"]
]
remove: [
  ["rm" "-f" "%{prefix}%/bin/piqi"]
  ["ocamlfind" "remove" "piqilib"]
]
build-test: [make "test"]
depends: [
  "ocamlfind"
  "easy-format"
  "ulex"
  "xmlm"
  "optcomp"
  "base64" {>="2.0.0"}
  "base-bytes"
]
dev-repo: "git://github.com/alavrik/piqi"
